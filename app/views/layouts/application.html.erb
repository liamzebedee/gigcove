<html dir="ltr" lang="en">
<head>
	<%= render 'shared/metadata' %>

	<!-- Desktop -->
	<link rel="icon" type="image/png" href="<%= image_path 'icon.png' %>">
	<!-- iOS -->
	<link rel="apple-touch-icon-precomposed" href="<%= image_path 'icon-touch-precomposed.png' %>">
	<link rel="apple-touch-icon" href="<%= image_path 'icon-touch-precomposed.png' %>">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<!--<link rel="apple-touch-startup-image" href="<%= image_path 'icon-touch-precomposed.png' %>">-->
	<meta name="apple-mobile-web-app-capable" content="yes">
	<!-- Android -->
	<meta name="mobile-web-app-capable" content="yes">

	<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
	<%= analytics_init if Rails.env.production? %>
  	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  	<%= javascript_include_tag "application", "data-turbolinks-track" => true, "data-turbolinks-eval" => false %>
</head>

<body>
  <header id="header">
    <%= render 'shared/header' %>
    
    <% if notice or alert %>
    <div class="notice">
    	<% if notice %><p class="alert alert-info"><%= notice %></p><% end %>
    	<% if alert %><p class="alert alert-warning"><%= alert %></p><% end %>
    </div>
    <% end %>
  </header>
  
  <% page_id = "#{controller_name}-#{action_name}" %>
  <div id="page-wrap"><div class="page" id="<%= page_id %>">
    <%= yield %>
  </div></div>
  
  <footer id="footer"></footer>
</body>

</html>
