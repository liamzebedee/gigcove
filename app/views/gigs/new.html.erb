  <a class="item item-icon-left item-text-wrap" ng-click="tagsModal.show()">
    <i class="icon ion-pound"></i>
    Tags
    <ul><li><span ng-repeat="tag in gig.tags"><strong>#{{tag.name}}</strong> </span></ul>
  </a>


    <script id="tagsModal.html" type="text/ng-template">
      <ion-modal-view>
          <div class="bar bar-header bar-dark">
            <h1 class="title">Tag this gig</h1>
            <a ng-click="tagsModal.hide()" class="button button-icon icon ion-chevron-down"></a>
          </div>
          <div class="bar bar-subheader item-input-inset">
            <label class="item-input-wrapper">
              <i class="icon ion-ios7-search placeholder-icon"></i>
              <input type="search" placeholder="Enter tags" ng-model="searchTags.query">
            </label>
            <button class="button button-clear">
              Cancel
            </button>
          </div>

        <ion-content class="has-header has-subheader">
          <div class="list">
            <button ng-click="createTag(searchTags.query)" class="button button-block button-positive" ng-hide="(searchTags.query === '' || hasTag({name: searchTags.query}))">
              Create and tag <strong>#{{searchTags.query}}</strong>
            </button>

            <div class="item item-button-right" ng-repeat="tag in gig.tags">
              <div class="item-body">
                <strong>#{{tag.name}}</strong>
              </div>

              <button ng-click="removeTag(tag)" class="button button-icon icon ion-minus-circled"></button>
            </div>

          </div>
        </ion-content>
      </<ion-modal-view>
  </script>

  <li class="item item-toggle">
    <span>18+</span>
    <label class="toggle toggle-assertive">
     <input type="checkbox" ng-model="gig.eighteenPlus">
     <div class="track">
       <div class="handle"></div>
     </div>
   </label>
 </li>

 <label class="item item-input">
