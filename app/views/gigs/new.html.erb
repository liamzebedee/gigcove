<header class="page-header">
	<h1>Post a gig</h1>
</header>

<%= form_for(@gig, html: {autocomplete: "off", class: "gig-form"}) do |f| %>
<article class="gig"><div class="gig-inner">

  <aside class="left">
    <div>
    <span>Costs $</span><span class="ticket-cost" contenteditable="true" placeholder="0"></span>
    <%= f.hidden_field(:ticket_cost) %>
    </div>
    
    <div>
    <p>Starting on the 
      <span class="from-date-day" contenteditable="true" placeholder="dd" required=true></span>
      /<span class="from-date-month" contenteditable="true" placeholder="mm"></span>
      /<span class="from-date-year" contenteditable="true" placeholder="yy"></span>
       at 
      <span class="from-time-hour" contenteditable="true" placeholder="hh"></span>
      :<span class="from-time-minute" contenteditable="true" placeholder="mm"></span>.
    </p>
    <%= f.hidden_field(:start_time) %>
    </div>
  </aside><!-- .left -->

  <div class="main">
    <h2><span class="event-name" contenteditable="true" placeholder="Gig title"></span></h2>
    <%= f.hidden_field(:title) %>
    
    <div><span class="description" contenteditable="true" placeholder="Description"></span></div>
    <%= f.hidden_field(:description) %>
    
    <div><small class="link-to-source" contenteditable="true" placeholder="Link"></small></div>
    <%= f.hidden_field(:link_to_source) %>
    
    <select data-placeholder="What type(s) of music will be playing?" class="chosen-select gig-genres" multiple tabindex="4">
		  <option value=""></option>
		  <option>Rock</option>
		  <option>Indie</option>
		  <option>Alternative</option>
		  <option>Chill</option>
		  <option>Acoustic</option>
	  </select>
	  <%= f.hidden_field(:genres) %>
  </div><!-- .main -->

  <aside class="right">
    <div><p class="venue-name" contenteditable="true" placeholder="Venue name"></p></div>
	  <div><p class="location" contenteditable="true" placeholder="Location"></p></div>
	  <%= fields_for :venue, @gig.venue do |venue_fields| %>
	    <%= venue_fields.hidden_field(:venue_name) %>
	    <%= venue_fields.hidden_field(:venue_location) %>
	  <% end %>
  </aside><!-- .right -->

</div></article><!-- .gig -->

<footer>
  <p>Shortly after sending us the gig's details, we will moderate it for quality and then post it.</p>
  <p>If you have any feedback on this process or GigCove in general, please do <%= link_to "contact us", contact_path %>. And thanks for contributing!</p>
  <button type="submit" class="btn btn-primary btn-lg" value="submit" name="commit">Post Gig</button>
</footer>

<% end %>
