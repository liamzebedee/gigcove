      <span class="input-label">Start time</span>
      <input type="time"/>
<span><select name="time_selector_time_hours" data-sigil="time_selector_time_hours"><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option><option value="9" selected="1">9</option><option value="10">10</option><option value="11">11</option><option value="12">12</option></select><select name="time_selector_time_minutes" data-sigil="time_selector_time_minutes"><option value="0">00</option><option value="5">05</option><option value="10">10</option><option value="15">15</option><option value="20">20</option><option value="25">25</option><option value="30">30</option><option value="35">35</option><option value="40">40</option><option value="45">45</option><option value="50">50</option><option value="55" selected="1">55</option></select><select name="time_selector_time_am_pm" data-sigil="time_selector_time_am_pm"><option value="0" selected="1">AM</option><option value="1">PM</option></select>

