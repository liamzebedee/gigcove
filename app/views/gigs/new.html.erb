<div class="item item-divider">
  Venue details
</div>

  <script id="selectVenueModal.html" type="text/ng-template">
    <div class="modal">
        <div class="bar bar-header bar-dark">
            <h1 class="title">Find or create venue</h1>
            <a ng-click="selectVenueModal.hide()" class="button button-icon icon ion-chevron-down"></a>
          </div>
          <div class="bar bar-subheader item-input-inset">
            <label class="item-input-wrapper">
              <i class="icon ion-ios7-search placeholder-icon"></i>
              <input type="search" placeholder="Enter a venue name" ng-model="searchVenues.query" ng-model-options="{ debounce: {'default': 500, 'blur': 1} }">
            </label>
          </div>

        <ion-content class="has-header has-subheader has-footer">
          <div class="list">
            <div class="item" ng-show="searchVenues.searching">
              <i class="icon ion-loading-c"></i> Finding venues...
            </div>

            <div class="item" ng-show="searchVenues.query !== '' && searchVenues.loadedVenues.length == 0">
              <div class="item-body">
                We couldn't find the venue. Better create one then!
              </div>
            </div>

            <div class="item item-thumbnail-left" ng-repeat="venue in searchVenues.loadedVenues" ng-click="selectVenue(venue)">
              <h2>{{venue.name}}</h2>
              <p>{{venue.location}}</p>
            </div>

          </div>
        </ion-content>

        <ion-footer-bar ng-show="searchVenues.query !== '' && searchVenues.loadedVenues.length == 0">
          <div class="button-bar">
          <button ng-click="createVenue(searchVenues.query)" class="button button-positive icon-left ion-plus-round">Create venue <strong>{{searchVenues.query}}</strong>
            </button>
          </div>
        </ion-footer-bar>
      </div>
  </script>

  <a class="item" ng-click="selectVenueModal.show()"><i class="icon ion-search placeholder-icon"></i> Find or create venue</a>

  <label class="item item-input">
    <span class="input-label">Venue name</span>
    <input type="text" ng-model="gig.venue.name" ng-disabled="gig.venue.id !== null" placeholder="Find or create venue"/>
  </label>

  <label class="item item-input">
    <span class="input-label">Location</span>
    <input type="text" ng-model="gig.venue.location" ng-disabled="gig.venue.id !== null"/>
  </label>


  <div class="padding">
    <button class="button button-large button-full button-positive">Post gig</button>
  </div>
  </div>


