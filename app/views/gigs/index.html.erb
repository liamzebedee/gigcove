<header class="page-header">
	<h1>Find gigs</h1>
</header>

<article class="inner">

<nav>
	<div class="search">
	<%= form_tag("/gigs", method: "get", remote: true, class: "search-gigs") do |f| %>
		<p class="lead">Live music gigs near you in <span rel="popover" class="location" contenteditable="true" placeholder="South Brisbane, Brisbane AU" data-content="Please tell us where you are"></span> that are&nbsp;<span class="text-editable">$<span class="max-ticket-cost" contenteditable="true" placeholder="15">15</span> and under</span>. <button type="submit" class="btn btn-primary" name="commit" value="search" data-style="expand-left"><span class="ladda-label"><span class="glyphicon glyphicon-search"></span> Search</span></button></p>
		<%= hidden_field(:search, :location) %>
		<%= hidden_field(:search, :latitude) %>
		<%= hidden_field(:search, :longitude) %>
		<%= hidden_field(:search, :max_ticket_cost) %>
	<% end %>
	</div>

	<div class="btn-group btn-group-justified">
		<a href="<%= new_gig_path %>" class="btn btn-default" role="button"><span class="glyphicon glyphicon-bullhorn"></span> Post a gig</a>
		<a href="<%= contact_path %>" class="btn btn-default" role="button"><span class="glyphicon glyphicon-pencil"></span> Give us feedback</a>
	</div>
</nav>

<div class="gigs">
	<%= render 'gigs' %>
</div>

</article>
